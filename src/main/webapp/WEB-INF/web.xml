  </filter>
  <filter-mapping>
    <filter-name>ServiceConnectionFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping> -->

  <!-- Sitemesh -->
  <filter>
    <filter-name>Sitemesh</filter-name>
    <filter-class>
      br.com.alphadev.contest.ContestSkinSelector
    </filter-class>
  </filter>
  <filter-mapping>
    <filter-name>Sitemesh</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <!-- Mentawai -->
  <servlet>
    <servlet-name>Mentawai</servlet-name>
    <servlet-class>org.mentawai.core.Controller</servlet-class>
    <init-param>
      <param-name>applicationManager</param-name>
      <param-value>br.com.alphadev.contest.ActionsManager</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Mentawai</servlet-name>
    <url-pattern>*.action</url-pattern>
  </servlet-mapping>
  <listener>
    <listener-class>org.mentawai.tag.CreateJSLibraries</listener-class>
  </listener>

  <!-- DisplaTag -->
  <filter>
    <filter-name>ResponseOverrideFilter</filter-name>
    <filter-class>org.displaytag.filter.ResponseOverrideFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ResponseOverrideFilter</filter-name>
    <url-pattern>*.action</url-pattern>
  </filter-mapping>

  <!-- Acesso do EntityManager pelas Entitys -->
  <persistence-context-ref>
     <persistence-context-ref-name>contestPU</persistence-context-ref-name>
     <persistence-unit-name>contestPU</persistence-unit-name>
  </persistence-context-ref>

